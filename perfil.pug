extends layout

block content
  .contenedorPerfil
    .informacion
      .imagen
        img(src="../img/perfil2.png")
      .usuario
        p NOMBRE USUARIO
      .cancion
        p ULTIMA CANCION

      a(href="/Perfil/Ajustes")
        span(class="fa fa-cog")
    .contenido
      .descripcion
        h3 Descripcion
        p Texto de la descripcion
      .contenidoPerfil
        .top
          h4
            a(href="/Perfil/Top-Canciones") Top Canciones
          ul
            for item in top
              li
                a(href="#")= item
        .playlist
          h4
            a(href="/Perfil/PlayList") PlayList
          ul
            for item in playlist
              li
                a(href="#")= item




